<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardCornerRadius="4dp"
    android:background="@android:color/white"
    android:layout_margin="6dp">

    <LinearLayout
        android:id="@+id/layoutRowPOEntry"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDate"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="10 Oct 2018"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccentRed"/>

            <TextView
                android:id="@+id/tvDay"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:text="Monday"
                android:textSize="14sp"
                android:textStyle="normal"
                android:textColor="@color/colorAccentGreyDark"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvLoggedHours"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:text="Total Logged Hours : 5.63"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="@color/colorPrimaryText"/>

        <TextView
            android:id="@+id/tvBillingHours"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:text="Total Billing Hours : 2.50"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="@color/colorPrimaryText" />

    </LinearLayout>

</android.support.v7.widget.CardView>