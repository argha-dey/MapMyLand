<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape
                    android:dither="true"
                    android:shape="oval"
                    android:useLevel="false"
                    android:visible="true">
                    <gradient
                        android:centerColor="@color/colorAccentGreyDark"
                        android:endColor="@color/colorAccentGreyDark"
                        android:startColor="@color/colorAccentGreyDark"  />
                    <corners
                        android:radius="@dimen/switch_radius"/>
                </shape>
            </item>
            <item
                android:right="3px" android:left="3px" android:bottom="3px">
                <shape
                    android:dither="true"
                    android:shape="oval"
                    android:useLevel="false"
                    android:visible="true">
                    <gradient
                        android:angle="270"
                        android:endColor="@android:color/white"
                        android:startColor="@android:color/white"/>
                    <corners
                        android:radius="@dimen/switch_radius"/>
                    <size
                        android:width="@dimen/switch_track_height"
                        android:height="@dimen/switch_track_height" />
                </shape>
            </item>

        </layer-list>
    </item>
</selector>