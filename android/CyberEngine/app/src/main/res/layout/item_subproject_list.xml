<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    app:cardCornerRadius="4dp"
    android:background="@android:color/white"
    android:layout_margin="6dp">

    <TextView
        android:id="@+id/tvSubProjectName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:text="Android"
        android:textSize="14sp"
        android:textStyle="normal"
        android:textColor="@color/colorPrimaryText"/>

    <LinearLayout
        android:id="@+id/layoutSubProject"
        android:layout_below="@+id/tvSubProjectName"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_rect_nocorner_filledlightgrey"
        android:padding="8dp"
        android:layout_marginTop="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginRight="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hours"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:maxLines="1"
                    android:visibility="visible"
                    android:layout_alignParentLeft="true"/>

                <EditText
                    android:id="@+id/etTotalLoggedHour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="type here"
                    android:textColorHint="@color/colorAccentGrey"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:gravity="top|left"
                    android:lines="1"
                    android:lineSpacingExtra="1.25dp"
                    android:padding="7dp"
                    android:background="@drawable/bg_rect_cornergrey_filledwhite"
                    android:scrollbarThumbVertical="@color/colorAccentGrey"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bill Hrs"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:maxLines="1"
                    android:visibility="visible"
                    android:layout_alignParentLeft="true"/>

                <EditText
                    android:id="@+id/etBilledHour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:hint="type here"
                    android:textColorHint="@color/colorAccentGrey"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:textAllCaps="false"
                    android:gravity="top|left"
                    android:lines="1"
                    android:lineSpacingExtra="1.25dp"
                    android:padding="7dp"
                    android:background="@drawable/bg_rect_cornergrey_filledwhite"
                    android:scrollbarThumbVertical="@color/colorAccentGrey"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/colorPrimaryText"
                android:textSize="14sp"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:maxLines="1"
                android:visibility="visible"
                android:layout_alignParentLeft="true"/>

            <EditText
                android:id="@+id/et_log_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|textCapSentences"
                android:hint="type here"
                android:textColorHint="@color/colorAccentGrey"
                android:textColor="@color/colorPrimaryText"
                android:textSize="14sp"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:gravity="top|left"
                android:minLines="3"
                android:maxLines="10"
                android:lineSpacingExtra="1.25dp"
                android:padding="7dp"
                android:background="@drawable/bg_rect_cornergrey_filledwhite"
                android:scrollbarThumbVertical="@color/colorAccentGrey"
                android:layout_marginTop="5dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">
        <TextView
            android:id="@+id/tvSubProjectId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvApprovedHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvRejectedHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvCreatedById"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvEmpDeptId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvProjectDeptId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvProjectId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvProjectMemberId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvProjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvProjectType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>