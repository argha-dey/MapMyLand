<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@drawable/nav_drawer_header_bg2"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivUserImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/user_image_default"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Switch
            android:id="@+id/switchCheckIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:switchMinWidth="0dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/ivUserImage"
            android:textOff=""
            android:textOn=""
            android:thumb="@drawable/switch_thumb"
            android:thumbTextPadding="@dimen/switch_thumb_radius"
            android:track="@drawable/switch_track"/>

        <TextView
            android:id="@+id/tvSwitchCheckIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_alignLeft="@+id/switchCheckIn"
            android:layout_alignStart="@+id/switchCheckIn"
            android:layout_alignRight="@+id/switchCheckIn"
            android:layout_alignEnd="@+id/switchCheckIn"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/punchin" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@android:color/white"
        android:text="Lorem Ipsum"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/tvUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="lorem.ipsum@cyber-swift.com" />

</LinearLayout>
